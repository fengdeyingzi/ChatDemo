<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:CircleProgressBar="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:gravity="center_vertical">

	<com.lsjwzh.widget.materialloadingprogressbar.CircleProgressBar
		android:layout_width="80dp"
		android:layout_height="80dp"
		android:background="@null"
		CircleProgressBar:mlpb_enable_circle_background="false"
		CircleProgressBar:mlpb_progress_stoke_width="5dp"
		CircleProgressBar:mlpb_progress_color="#60baf0"/>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:id="@+id/progress_text"
		android:textSize="16sp"/>

</LinearLayout>

